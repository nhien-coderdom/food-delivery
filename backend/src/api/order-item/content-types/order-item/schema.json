{
  "kind": "collectionType",
  "collectionName": "order_items",
  "info": {
    "singularName": "order-item",
    "pluralName": "order-items",
    "displayName": "Order Item"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order",
      "inversedBy": "items"
    },
    "dish": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::dish.dish",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "quantity": {
      "type": "integer",
      "required": true
    },
    "notes": {
      "type": "string"
    }
  }
}
