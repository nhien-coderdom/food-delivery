{
  "kind": "collectionType",
  "collectionName": "restaurants",
  "info": {
    "singularName": "restaurant",
    "pluralName": "restaurants",
    "displayName": "Restaurants"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "dishes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::dish.dish",
      "mappedBy": "restaurant"
    },
    "orders": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order",
      "mappedBy": "restaurant"
    },
    "location": {
      "type": "json"
    },
    "address": {
      "type": "text"
    },
    "manager": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "restaurant"
    },
    "phone": {
      "type": "string",
      "minLength": 10,
      "maxLength": 14,
      "regex": "^(?:\\+?84\\s?)?(?:\\d{9,10}|(?:1800|1900)(?:\\s?\\d+)+)$"
    }
  }
}
